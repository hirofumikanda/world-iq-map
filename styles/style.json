{
  "version": 8,
  "sources": {
    "iq_by_country": {
      "type": "vector",
      "url": "pmtiles:///world-iq-map/data/iq_by_country.pmtiles",
      "minzoom": 0,
      "maxzoom": 8,
      "attribution": "<a href='https://www.naturalearthdata.com/downloads/10m-cultural-vectors/' target='_blank'>Made with Natural Earth</a> | <a href='https://www.worldwide-iq-test.com/iq-tests' target='_blank'>Most Intelligent Countries in the World in 2025</a>"
    },
    "iq_by_country_symbol": {
      "type": "geojson",
      "data": "data/iq_by_country_symbol.geojson",
      "attribution": "<a href='https://www.worldwide-iq-test.com/iq-tests' target='_blank'>Most Intelligent Countries in the World in 2025</a>"
    }
  },
  "glyphs": "font/{fontstack}/{range}.pbf",
  "layers": [
    {
      "id": "iq_by_country",
      "type": "fill",
      "source": "iq_by_country",
      "source-layer": "iq_by_country",
      "paint": {
        "fill-color": [
          "interpolate",
          ["linear"],
          ["get", "avg_iq"],
          90,
          "#fee5d9",
          100,
          "#fcae91",
          110,
          "#fb6a4a",
          120,
          "#cb181d"
        ],
        "fill-opacity": 0.85,
        "fill-outline-color": "#fff"
      }
    },
    {
      "id": "iq-labels",
      "type": "symbol",
      "source": "iq_by_country_symbol",
      "layout": {
        "text-field": ["to-string", ["round", ["get", "avg_iq"]]],
        "text-size": 10.5,
        "text-anchor": "center",
        "visibility": "none"
      },
      "paint": {
        "text-color": "#333",
        "text-halo-color": "#fff",
        "text-halo-width": 1
      }
    }
  ]
}
